<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddProductToFavouritesActivity">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/productNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productImage" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/productProducerLabel"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        tools:text="kjdahjkjdkjadkhak fsdfs ds fdfsd fssdfsd sssssssssssssjdhjkhk" />

    <TextView
        android:id="@+id/productProducerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/producer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productName" />

    <TextView
        android:id="@+id/productProducer"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/productProducerLabel"
        app:layout_constraintTop_toBottomOf="@id/productName"
        tools:text="kjdahjkjdkjadkhak fsdfs ds fdfsd fssdfsd sssssssssssssjdhjkhk" />

    <TextView
        android:id="@+id/productCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productProducer" />

    <TextView
        android:id="@+id/productCategory"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/productProducerLabel"
        app:layout_constraintTop_toBottomOf="@id/productProducer"
        tools:text="kjdahjkjdkjadkhak fsdfs ds fdfsd fssdfsd sssssssssssssjdhjkhk" />

    <TextView
        android:id="@+id/userProductOpeningDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/opening_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productCategory" />
    tools:text="cokosfdfsfdd" />

